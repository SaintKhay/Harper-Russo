testimonial.addEventListener('click', function (e) { e.preventDefault(); const
clicked = e.target.closest('.btn__testimonial'); if (!clicked) return; // Remove
current carousel[currentIndex].classList.remove('carousel-active'); if
(currentIndex < carousel.length) currentIndex++; else currentIndex = 0;
console.log(currentIndex); // carousel.forEach(el =>
el.classList.remove('carousel-active')); if
(clicked.classList.contains('btn__testimonial')) {
carousel[currentIndex].classList.add('carousel-active'); } }); /*
